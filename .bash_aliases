alias ll='ls -alG'
alias beep="echo -en '\007'"
alias tmux='TERM=xterm-256color tmux'

# MySQL aliases
alias mysql='mysql -A'
alias mr='mysql -A -uroot -p<whatever_my_pw_is>'

## git aliases
alias gst='git status'
alias gcm='git checkout master'

## Powder aliases
alias pr='powder restart'
alias pal='powder applog'
alias pdon='powder start'
alias pdoff='powder down'
alias pdo='powder open'

# Quick access to clear my local cache because I can never remember this command for some reason.
alias flushd="dscacheutil -flushcache"

